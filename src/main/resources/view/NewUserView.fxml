<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="1074.0" style="-fx-background-color: lightblue;" stylesheets="@../style/MainStyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.application.controller.NewUserViewController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox alignment="TOP_RIGHT" prefHeight="390.0" prefWidth="425.0" spacing="10.0">
                     <children>
                        <Button fx:id="btnAddNewUser" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#btnAddNewUserOnAction" prefHeight="24.0" prefWidth="110.0" text=" New User +" />
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" text="UserName :" />
                              <TextField fx:id="txtUsername" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="63.0" spacing="5.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" text="Full Name :" />
                              <TextField fx:id="txtFullName" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" text="Address :" />
                              <TextField fx:id="txtAddress" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" text="Contact No :" />
                              <TextField fx:id="txtContactNumber" HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnAdd" minWidth="73.0" mnemonicParsing="false" onAction="#btnAddOnAction" text="Add" />
                           </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" spacing="5.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" />
                              <ListView fx:id="lstContactList" prefHeight="90.0" prefWidth="196.0" />
                              <Button fx:id="btnRemove" minWidth="73.0" mnemonicParsing="false" onAction="#btnRemoveOnAction" prefHeight="24.0" prefWidth="79.0" text="Remove" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" text="Password :" />
                              <PasswordField fx:id="txtPassword" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" text="Confirm Passsword :" />
                              <PasswordField fx:id="txtConfirmPassword" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox minWidth="133.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" minWidth="140.0" />
                              <Button fx:id="btnSave" minWidth="66.0" mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save">
                                 <HBox.margin>
                                    <Insets right="10.0" />
                                 </HBox.margin>
                              </Button>
                              <Button fx:id="btnDelete" minWidth="66.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" />
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <TableView fx:id="tblDetails" prefHeight="338.0" prefWidth="633.0" HBox.hgrow="ALWAYS">
                     <columns>
                        <TableColumn minWidth="-1.0" prefWidth="125.0" text="Username" />
                        <TableColumn prefWidth="16.0" text="Full Name" />
                        <TableColumn prefWidth="157.0" text="Address" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
