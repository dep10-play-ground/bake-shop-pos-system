<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="1045.0" style="-fx-background-color: lightblue;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.application.controller.UserSceneController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
            <children>
                <HBox spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="376.0" spacing="20.0">
                            <children>
                                <Button fx:id="btnAddEmployee" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAddEmployeeOnAction" prefHeight="33.0" prefWidth="376.0" text="Add New Employee" />
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label alignment="CENTER_RIGHT" minWidth="116.0" text="Employee Name :" />
                                        <TextField fx:id="txtEmployeeName" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label alignment="CENTER_RIGHT" minWidth="116.0" text="Contact No :" />
                                        <TextField fx:id="txtContactNo" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label alignment="CENTER_RIGHT" minWidth="116.0" text="Role :" />
                              <ComboBox fx:id="cmbRole" minWidth="255.0" prefWidth="150.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label alignment="CENTER_RIGHT" minWidth="116.0" text="Password :" />
                                        <TextField fx:id="txtPassword" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnSave" minWidth="66.0" mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" />
                                        <Button fx:id="btnDelete" minWidth="66.0" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <Separator orientation="VERTICAL" prefHeight="200.0" />
                        <TableView fx:id="tblEmployeeDetails" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <columns>
                                <TableColumn prefWidth="135.0" text="Employee Name" />
                                <TableColumn prefWidth="171.0" text="Contact Name" />
                                <TableColumn prefWidth="147.0" text="Role" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
