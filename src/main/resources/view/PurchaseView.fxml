                        <TableView fx:id="tblOrderBill" prefHeight="300.0" prefWidth="745.0">
                          <columns>
                            <TableColumn prefWidth="82.0" text="Item ID" />
                            <TableColumn minWidth="9.0" prefWidth="108.0" text="Batch NO" />
                              <TableColumn prefWidth="387.0" text="Item Name" />
                              <TableColumn minWidth="0.0" prefWidth="93.0" text="Unit Price" />
                              <TableColumn prefWidth="73.0" text="QTY" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER" prefHeight="80.0" prefWidth="745.0" spacing="40.0">
                           <children>
                              <Button fx:id="btnOrder" mnemonicParsing="false" onAction="#btnOrderOnAction" prefHeight="50.0" prefWidth="120.0" text="Place Order" />
                              <Button fx:id="btnCancelOrder" mnemonicParsing="false" onAction="#btnCancelOrderOnAction" prefHeight="50.0" prefWidth="120.0" text="Cancel  Order" />
                              <Label alignment="CENTER" prefHeight="16.0" prefWidth="89.0" text="Total">
                                 <font>
                                    <Font name="System Bold" size="22.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblTotal" alignment="CENTER" prefHeight="16.0" prefWidth="75.0">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </Label>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                  </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
